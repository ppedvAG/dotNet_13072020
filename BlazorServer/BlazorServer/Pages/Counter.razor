@page "/counter"

<h1>Counter</h1>

<p style="background: @farbe">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private string farbe = "red";


    private void IncrementCount()
    {
        currentCount++;


        if (currentCount % 2 == 0)
            farbe = "yellow";
        else
            farbe = "green";
    }
}
